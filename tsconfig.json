{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node", "jest", "vite/client"],
    "lib": ["es2017", "dom"],
    "module": "es2022",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite-env.d.ts",
    "declaration.d.ts"
  ]
}
